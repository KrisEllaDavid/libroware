{
  "name": "libroware",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "backend": "cd backend && npm run dev -- --host",
    "frontend": "cd frontend && npm run dev -- --host",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "chart.js": "^4.4.9",
    "chokidar": "^4.0.3",
    "react-chartjs-2": "^5.3.0",
    "recharts": "^2.15.2"
  }
}
